%ul
  %li= link_to 'All articles', articles_path
  %br/
  %li= link_to 'Edit', edit_article_path(@article)
%p
  %strong Title:
  %br/
  = @article.title
%p
  %strong Text:
  %br/
  = @article.text
%h2 Comments
- @article.comments.each do |comment|
  %p
    %strong Commenter:
    = comment.commenter
  %p
    %strong Comment:
    = comment.body
%h2 Add you comment:
= form_for ([@article, @article.comments.build]) do |f|
  %p= f.label :commenter
  %br/
  = f.text_field :commenter
  %p= f.label :body
  %br/
  = f.text_area :body
  %p
  = f.submit

